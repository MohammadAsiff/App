<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="188dp"
    android:background="@color/yellow"
    android:id="@+id/l1"
    android:orientation="horizontal">



    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/facebook"
        android:id="@+id/i1"
   />
    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="Facebook"
        android:layout_below="@id/i1"
        android:layout_marginLeft="25dp"
        android:id="@+id/tv1"

        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/behance"
        android:layout_marginTop="20dp"
        android:id="@+id/i2"
        android:layout_marginLeft="125dp"
         />
    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="Behance"
        android:layout_below="@id/i2"
        android:layout_marginLeft="145dp"
        android:id="@+id/tv2"

        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/twitter"
        android:layout_marginTop="20dp"
        android:id="@+id/i3"
        android:layout_marginLeft="240dp"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="Twitter"
        android:layout_below="@id/i3"
        android:layout_marginLeft="260dp"
        android:id="@+id/tv3"

        />

</RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="188dp"
    android:background="@color/green"
    android:id="@+id/l2"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/instagram"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/i4"
        />
    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="Instagram"
        android:layout_below="@id/i4"
        android:layout_marginLeft="25dp"

        android:id="@+id/tv4"

        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/linkedin"
        android:layout_marginTop="20dp"
        android:id="@+id/i5"
        android:layout_marginLeft="125dp"
        />
    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="Linkedin"
        android:layout_below="@id/i5"
        android:layout_marginLeft="145dp"
        android:id="@+id/tv5"

        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/pinterest"
        android:layout_marginTop="20dp"
        android:id="@+id/i6"
        android:layout_marginLeft="240dp"
        />
    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="pinintrest"
        android:layout_below="@id/i6"
        android:layout_marginLeft="260dp"
        android:id="@+id/tv6"

        />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:background="@color/lorange"
        android:id="@+id/l3"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/tumblr"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:id="@+id/i7"

            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="Tumblr"
            android:layout_below="@id/i7"
            android:layout_marginLeft="30dp"
            android:id="@+id/tv7"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/vk"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="30dp"
            android:id="@+id/i8"

            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="Vk"
            android:layout_below="@id/i8"
            android:layout_marginLeft="165dp"
            android:id="@+id/tv8"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/google"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="240dp"
            android:id="@+id/i9"

            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="Google+"
            android:layout_below="@id/i9"
            android:layout_marginLeft="260dp"
            android:id="@+id/tv9"/>


    </RelativeLayout>
</LinearLayout>